<div class="container d-flex">
  <div>
    <%= image_tag(current_user.avatar_thumbnail, class:"xyz")%>
  </div>
  <div class="userinfotable">
  <strong><%= current_user.email.split('@')[0].capitalize%></strong>
    <table class="table">
      <thead>
      <tr>
        <th>Posts</th>
        <th>Followers</th>
        <th>Following</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= current_user.posts.all.count%></td>
          <td><%= current_user.followers.all.count %></td>
          <td><%= current_user.following.all.count%></td>
        </tr>
      </tbody>
    </table>
    </div>
</div>

<div class="container mypost">
<% @post.each do |post| %>
<div class="card">
  <%= image_tag(post.thumbnail(0) , class: "img-thumbnail center")%>
  <div class="card-body">
    <p class="card-text"><strong>Caption: </strong><%=  post.body %></p>
    <div class="d-flex flex-row">
    <%= render "posts/votes_score", post: post %>
    <i class="fa fa-heart" style="font-size:28px;color:red; margin-left: 2%"></i>
    </div>
    <br>
    <div class="d-flex flex-row">
    <%= render "posts/upvote_link", post: post ,class:"btn btn-dark"%>
    <p><%= link_to 'Show', post ,class:"btn btn-dark b1" %></p>
    </div>
  </div>
</div>
<% end%>
</div>

